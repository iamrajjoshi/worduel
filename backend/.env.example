# Worduel Backend Environment Variables
# Copy this file to .env.development for local development or .env.production for production

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
HOST=0.0.0.0
READ_TIMEOUT=10s
WRITE_TIMEOUT=10s
IDLE_TIMEOUT=60s
SHUTDOWN_TIMEOUT=30s

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_METHODS=GET,POST,OPTIONS,PUT,DELETE
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
WS_RATE_LIMIT=60
API_RATE_LIMIT=100
MAX_CONNECTIONS_PER_IP=10

# =============================================================================
# ROOM MANAGEMENT CONFIGURATION
# =============================================================================
MAX_CONCURRENT_ROOMS=1000
ROOM_INACTIVE_TIMEOUT=30m
GAME_TIMEOUT=30m
CLEANUP_INTERVAL=5m
MAX_PLAYERS_PER_ROOM=2

# =============================================================================
# GAME LOGIC CONFIGURATION
# =============================================================================
MAX_GUESSES=6
WORD_LENGTH=5
GUESS_TIMEOUT_MS=10
BROADCAST_TIMEOUT_MS=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
VALIDATE_ORIGIN=true
MAX_MESSAGE_SIZE=1024
CONNECTION_TIMEOUT=30s

# =============================================================================
# DEVELOPMENT/DEBUG CONFIGURATION
# =============================================================================
DEBUG_MODE=false
VERBOSE_LOG=false
PROFILE_MODE=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info
# Environment: development, staging, production
ENVIRONMENT=development
SERVICE_NAME=worduel-backend
# Add source file and line numbers to logs (useful for debugging)
LOG_ADD_SOURCE=false

# =============================================================================
# SENTRY MONITORING CONFIGURATION
# =============================================================================
# Sentry DSN (Data Source Name) - leave empty to disable Sentry
SENTRY_DSN=
# Sentry environment name
SENTRY_ENVIRONMENT=development
# Application version/release
SENTRY_RELEASE=1.0.0
# Sample rate for performance monitoring (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1
# Enable Sentry debug mode
SENTRY_DEBUG=false